.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'Tasks Manager', root_path, class: 'brand'
      %ul.nav
        %li= link_to 'New Project', new_project_path
        = if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{:"data-toggle" => 'dropdown', href: '#'}
              Logged as #{current_user.email}
              %b.caret
            %ul.dropdown-menu
              %li= link_to content_tag(:i,'', class: 'icon-wrench') + ' Account', edit_user_registration_path(current_user)
              %li= link_to content_tag(:i, '', class: 'icon-share-alt') + ' Logout', destroy_user_session_path, method: :delete
        = unless user_signed_in?
          = link_to 'Login', new_user_session_path
