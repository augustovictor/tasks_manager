%h3 Tasks to do ( #{ @user.tasks.to_do.count } )
- if @tasks.empty?
  %i No tasks
- else
/ %ul.no_list_style.hover_list
/   - @tasks.to_do.limit(10).each do |task|
/     %li
/       = task.name
/       \-
/       = task.project.name

%ul.no_list_style
  %ul
    - @projects.order_name.each do |project|
      %li
        .own_tasks_project_header
          %h3= link_to project.name, project_path(project)
        .own_tasks_container
          %ul
            - project.tasks.to_do.each do |task|
              %li
                = link_to task.name, project_task_path(project, task)
      %hr
