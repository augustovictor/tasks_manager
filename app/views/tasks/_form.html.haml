= simple_form_for([@project, @task]) do |f|

  .form-inputs
    %p * Assign to:
    = f.simple_fields_for(:assignments) do |assignment|
      = assignment.association :task, collection: User.all, include_blank: false, label: false, input_html: { class: 'span4'}

    = f.input :name, input_html: {class: 'span4'}
    = f.input :description, input_html: {rows: 4, class: 'span4'}
    = f.input :priority, collection: 1..3, prompt: false, input_html: { class: 'span1' }
    = f.input :deadline, input_html: { class: 'span1' }
    / = f.input collection: User.all
    %br
    = f.submit class: 'btn btn-primary'
    = link_to 'Cancel', :back, class: 'btn'